@model IEnumerable<HomeCooking.Models.ChiTietHoaDonKhachHang>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin/_AdminLayout.cshtml";
}

<section class="content">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Title</h3>
                        <!-- Navbar -->
                        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                            <!-- Left navbar links -->
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                                </li>

                            </ul>

                            <!-- Right navbar links -->
                            <ul class="navbar-nav ml-auto">
                                <!-- Navbar Search -->
                                <li class="nav-item">
                                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                                        <i class="fas fa-search"></i>
                                    </a>
                                    <div class="navbar-search-block">
                                        <form class="form-inline">
                                            <div class="input-group input-group-sm">
                                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                                <div class="input-group-append">
                                                    <button class="btn btn-navbar" type="submit">
                                                        <i class="fas fa-search"></i>
                                                    </button>
                                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </li>



                            </ul>
                        </nav>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body" style="margin-left: 320px;">
                        <h4>Quản lý chi tiết hóa đơn khách hàng</h4>
                        <p>
                            <a asp-action="Create">Create New</a>
                        </p>

                        <table class="table" border="1">
                            <tr style="background-color:gray">
                                <th>
                                    @Html.DisplayNameFor(model => model.IdInvoiceNavigation.IdInvoice)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdLoHangNavigation.IdFoodNavigation.NameFood)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdLoHangNavigation.IdLoHang)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoLuong)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GiaTien)
                                </th>
                                <th>Thao tác</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdInvoiceNavigation.IdInvoice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdLoHangNavigation.IdFoodNavigation.NameFood)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdLoHangNavigation.IdLoHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaTien)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = (item.IdInvoice + "@" + item.IdLoHang) }) |
                                        @Html.ActionLink("Details", "Details", new { id = (item.IdInvoice + "@" + item.IdLoHang) }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = (item.IdInvoice + "@" + item.IdLoHang) })
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>

                    <!-- /.card-footer-->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>