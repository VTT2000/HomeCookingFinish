
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <title>Đăng nhập hệ thống</title>
    <style>
        .swapper {
            max-width: 600px;
            min-height: 30px;
            border: 1px solid #808080;
            padding: 10px;
            border-radius: 10px;
            margin: auto;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    <body>
        <div class="swapper mt-md-5">
            <h3 class="text-center text-danger" >
                ĐĂNG NHẬP HỆ THỐNG
            </h3>
            <div class="row">
                <div class="col-md-4">
                    <img src="~/img/admin.png" class="img-fluid" />
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label><strong>Tên đăng nhập (*)</strong></label>
                        <input name="username" type="text" placeholder="Tên đăng nhập hoặc E-mail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><strong> Mật khẩu (*)</strong></label>
                        <input name="password" type="password" placeholder="Mật khẩu" class="form-control" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">ĐĂNG NHẬP</button>
                    </div>
                    <div class="form-group">
                        <p class="text-danger">@ViewBag.Error</p>
                        <p>(*)Thông tin bắt buộc cần nhập</p>
                    </div>

                </div>

            </div>
        </div>
    </body>
}
</html>
